<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SummeryActivity"
    android:orientation="vertical"
    android:layout_weight="10"
    android:padding="30dp"
    android:background="@drawable/login">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:src="@drawable/summeryp"
        android:padding="30dp"/>


    <Button
        android:id="@+id/ranklistbtn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="rank list"
        android:drawableRight="@drawable/listp"/>

    <Button
        android:id="@+id/playerdetailbtn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="player details"
        android:drawableRight="@drawable/details"/>

    <Button
        android:id="@+id/iniperf"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="individual performance"
        android:drawableRight="@drawable/perf"/>

    <Button
        android:id="@+id/backtohomebtn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="back"
        android:drawableRight="@drawable/backp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Summery page"
        android:textAlignment="center"
        android:textColor="@color/black"/>





</LinearLayout>