<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SummeryActivity"
    android:orientation="vertical"
    android:background="@drawable/login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/summeryp"
            android:padding="6dp"/>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:elevation="6dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:gravity="center"
                        android:padding="17dp"
                        android:orientation="vertical">

                        <ImageView
                            android:src="@drawable/listp"
                            android:layout_width="80dp"
                            android:layout_height="80dp"/>

                        <Button
                            android:id="@+id/ranklistbtn"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:text="rank list" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:elevation="6dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:gravity="center"
                        android:padding="17dp"
                        android:orientation="vertical">

                        <ImageView
                            android:src="@drawable/details"
                            android:layout_width="80dp"
                            android:layout_height="80dp"/>

                        <Button
                            android:id="@+id/playerdetailbtn"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:text="player details" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:elevation="6dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:gravity="center"
                        android:padding="17dp"
                        android:orientation="vertical">

                        <ImageView
                            android:src="@drawable/perf"
                            android:layout_width="80dp"
                            android:layout_height="80dp"/>

                        <Button
                            android:id="@+id/iniperf"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:text="individual performance"
                            />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:elevation="6dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:gravity="center"
                        android:padding="17dp"
                        android:orientation="vertical">

                        <ImageView
                            android:src="@drawable/backp"
                            android:layout_width="80dp"
                            android:layout_height="80dp"/>

                        <Button
                            android:id="@+id/backtohomebtn"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:text="back to home" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </GridLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Summery page"
            android:textSize="16dp"
            android:textAlignment="center"
            android:textColor="@color/black"/>


    </LinearLayout>
</ScrollView>